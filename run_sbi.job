#!/bin/bash
#SBATCH -J bmode
#SBATCH -C a100,ib
#SBATCH -p gpu
#SBATCH -t 200:00:00
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=4        # cpu-cores per task (>1 if multi-threaded tasks)
#SBATCH --gpus-per-task=1
